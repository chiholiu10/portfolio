{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "extends": [
    "next",
    "prettier",
    "airbnb-base",
    "eslint:recommended",
    "plugin:import/typescript"
  ],
  "plugins": ["@typescript-eslint", "simple-import-sort"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "import/no-cycle": "off",
    "no-multiple-empty-lines": ["error", { "max": 1 }],
    "import/no-unresolved": [2, { "caseSensitive": false }],
    "quotes": ["error", "double"],
    "import/extensions": [
      "off",
      "ignorePackages",
      {
        "": "never",
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ],
    "no-tabs": "off",
    "import/prefer-default-export": "off",
    "camelcase": ["error", { "allow": ["Aaa_Abb"] }],
    "max-len": "off",
    "trailing-comma": "off",
    "no-trailing-spaces": "off"
  }
}
